.md-content
  img
    display block
    max-width 100%
    margin 20px 0
  a
    color c-master
  a:visited
    color #69a79a
  h1,h2,h3,h4,h5,h6
    padding-bottom .3em
    border-bottom 1px solid #dcdcdc
  p
    line-height 1.4em
    &:not(:first-child)
      text-indent 1em
  pre
    // color #ccdce1
    // background-color #212e35
    // border 1px solid #465d65
    // border-radius 5px
    color #525252
    background-color #f8f8f8
    overflow auto
    padding 25px 10px 15px
    position relative
    font-size 13px
    font-family 'Roboto Mono', Monaco, courier, monospace
  code:before,
  code:after
    position absolute
    top 5px
    content attr(des)
    left 1em
    display inline-block
    // color #4a626b
    color #ccc
    font-size 12px
  code:after
    left initial
    right 1em
    content attr(class)
  .hljs-function
    color #a87fc6
  .hljs-built_in
    color #dcb360
  .hljs-keyword
    color #eb4f6a
  .hljs-attr
    color #5477bf
  .hljs-literal
    color #cd775f
  .hljs-params
    color #da7c61
  .hljs-number
    color #3abf8e
  .hljs-string
    color #72bd31
  .hljs-title
    color #6d94db
  .hljs-comment,
  .md-comment
    // color #4a626b
    color #b3b3b3
    
  .hljs-selector-id
    color #a87fc6
  .hljs-selector-class
    color #dcb360
  .hljs-selector-tag
    color #da7c61
  .hljs-attribute
    color #5477bf
    
  .hljs-meta
    color #eb4f6a
  .hljs-tag
    color #33b2d8
  .hljs-name
    color #dc3b42




