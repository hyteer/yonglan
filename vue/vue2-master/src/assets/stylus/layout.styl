// flex
flexH()
  display flex
  flex-flow row nowrap
flexV()
  display flex
  flex-flow column nowrap
.l-flexH--sa
  flexH()
  align-items center
  justify-content space-around
.l-flexV--c
  flexV()
  align-items center
  justify-content center
.l-flexH
  flexH()
.l-flexV
  flexV()
.l-flex--auto
  flex 0 0 auto
.l-flex--full
  flex 1 1 100%

// page
.l-page--Full
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  
